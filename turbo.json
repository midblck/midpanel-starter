{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputs": [".next-dev/**", "!.next-dev/cache/**"]
    },
    "devsafe": {
      "cache": false,
      "persistent": true,
      "outputs": [".next-dev/**", "!.next-dev/cache/**"]
    },
    "generate:importmap": {},
    "generate:types": {},
    "lint": {},
    "payload": {},
    "start": {
      "dependsOn": ["build"]
    }
  }
}
